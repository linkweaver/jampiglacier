<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="paperformat_custom_9mm" model="report.paperformat">
        <field name="name">100mm Custom</field>
        <field name="default" eval="False" />
        <field name="format">custom</field>
        <field name="page_height">100</field>
        <field name="page_width">100</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">2</field>
        <field name="margin_right">2</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="action_report_product_label"
        string="Product Label"
        model="mrp.production"
        report_type="qweb-pdf"
        file="mai_manufactured_product_label.report_product_label"
        name="mai_manufactured_product_label.report_product_label"
        menu="False"
    />

    <record id="mai_manufactured_product_label.action_report_product_label" model="ir.actions.report">
        <field name="paperformat_id" ref="mai_manufactured_product_label.paperformat_custom_9mm"/>
    </record>

</odoo>
