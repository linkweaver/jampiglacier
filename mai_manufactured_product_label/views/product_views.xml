<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mai_manufactured_product_label_product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.common.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <page name="inventory" position="after">
                <page string="Energetic" name="energetic_ids">
                    <field name="energetic_ids">
                        <tree editable="bottom">
                            <field name="enargy_id" required="1"/>
                            <field name="name" required="1"/>
                            <field name="template_id" invisible="1"/>
                        </tree>
                    </field>
                </page>
                <page string="Allergy Icons">
                    <field name="allergy_image_ids" mode="kanban" context="{'default_name': name, 'default_product_tmpl_id': active_id}">
                        <kanban string="Allergy Icons">
                            <field name="name"/>
                            <field name="image" />
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click">
                                        <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right"/>
                                        <div class="o_kanban_image">
                                            <img t-if="record.image.raw_value" t-att-src="'data:image/png;base64,'+record.image.raw_value"/>
                                        </div>
                                        <div class="oe_kanban_details">
                                            <field name="name"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </page>
            <page name="general_information" position="inside">
                <group name="ingredients" string="Ingredients">
                    <field name="ingredients" nolabel="1"/>
                </group>
            </page>
            <group name="packaging" position="after">
                <group name="other_info" string="Other Info">
                    <field name="conservation_of_pack"/>
                    <field name="product_use"/>
                </group>
            </group>
            <!-- <page name="inventory" position="inside">
                <group string="Conservation of Pack">
                    <field name="conservation_of_pack" nolabel="1"/>
                </group>
            </page> -->
        </field>
    </record>

    <record id="mai_manufactured_product_label_view_template_property_form" model="ir.ui.view">
        <field name="name">product.template.stock.property.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="stock.view_template_property_form"/>
        <field name="arch" type="xml">
            <div name="volume" position="after">
                <label for="volume"/>
                <div class="o_row" name="volume">
                    <field name="volume" string="Volume"/>
                    <span>mÂ³</span>
                </div>
            </div>
        </field>
    </record>

    <record model="ir.ui.view" id="view_allergy_image_form">
        <field name="name">allergy.image.form</field>
        <field name="model">allergy.image</field>
        <field name="arch" type="xml">
            <form string="Allergy Icons">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" options="{'size': [90, 90]}"/>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name" string="Image Name"/>
                        <h1><field name="name" placeholder="Image Name" required="True"/></h1>
                        <field name="product_tmpl_id" invisible="1"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
